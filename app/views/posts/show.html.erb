
<h2><%=@post.title%></h2>
<% if @post.user == current_user %>
<%= link_to "Edit Post", edit_category_post_path(@category, @post), :class=>'btn btn-warning' %>
<%= link_to "Delete Post", category_post_path(@category, @post), :method =>"delete", :class=>'btn btn-danger' %>
<% end %>

<p><%=@post.body%></p>
