
<h2><%=@category.name %> posts</h2>

<%= link_to "Create New Post", new_category_post_path(@category, @posts), :class=>'btn btn-success' %>

<table class="table table-striped table-hover container">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Author</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each_with_index do |post,index| %>
      <tr>
        <td><%=index+1%></td>
        <td><%= link_to post.title, category_post_path(@category, post) %></td>
        <td><%=post.user.name%></td>
      </tr>
    <% end %>
  </tbody>
</table>
