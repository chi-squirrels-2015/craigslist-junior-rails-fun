
<table class="table table-striped table-hover container">
  <thead>
    <tr>
      <th><h2>Categories</h2></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category_path(category) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

